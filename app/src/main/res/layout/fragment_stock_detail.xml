<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_stock_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    app:columnCount="3"
    tools:context="com.udacity.stockhawk.ui.StockDetailFragment">

    <TextView
        android:id="@+id/stock_symbol_textview"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        app:layout_columnSpan="3"
        app:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:textSize="20sp"
        tools:text="Some Stock "
        />

    <TextView
        android:id="@+id/stock_price_textview"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:gravity="center"
        android:textSize="20sp"
        tools:text="Stock Price "
        />

    <TextView
        android:id="@+id/stock_absolute_textview"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:gravity="center"
        android:textSize="20sp"
        tools:text="Stock Absolute Change"
        />

    <TextView
        android:id="@+id/stock_percent_textview"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:gravity="center"
        android:textSize="20sp"
        tools:text="Stock Percent Change"
        />

    <!-- TODO: Update blank fragment layout -->
    <com.github.mikephil.charting.charts.CandleStickChart
        android:id="@+id/stock_chart"
        app:layout_columnWeight="1"
        app:layout_rowWeight="5"
        app:layout_columnSpan="3"
        app:layout_gravity="fill_horizontal"
        >
        </com.github.mikephil.charting.charts.CandleStickChart>
</android.support.v7.widget.GridLayout>
